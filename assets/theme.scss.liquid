.product-big-image {
  position: relative;

  img {
    display: block;
    margin: 0 auto;
  }

  &.working {

    img {
      visibility: hidden;
    }
  }

  &.zoom-enabled {
    cursor: pointer;
    cursor: -webkit-zoom-in;
    cursor: -moz-zoom-in;
    cursor: zoom-in;
  }
}

.product-image-zoom {
  position: absolute;
  background-color: white;
  background-repeat: no-repeat;
  display: none;
  top: 0;
  right: 0;
  bottom: 0;
  left: 0;
  z-index: 10;

  cursor: pointer;
  cursor: -webkit-zoom-out;
  cursor: -moz-zoom-out;
  cursor: zoom-out;

  &.active {
    display: block;
  }
}

.product-thumbnails {
  margin-top: $gutter;
  text-align: center;
  font-size: 0;

  &.hidden {
    visibility: hidden;
  }

  img {
    display: inline-block;
    vertical-align: top;
    margin: 1px 6px 20px;
    padding: 2px;
    cursor: pointer;

    &.active {
      border: 1px solid $borderColor;
      margin: 0 5px 20px;
    }

    @include breakpoint(s) {
      margin: 1px 3px 10px;

      &.active {
        margin: 0 2px 20px;

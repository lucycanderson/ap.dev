  -o-animation:        shake 1.5s 4 ease-in;
  animation:            		shake 1.5s 4;
  animation-fill-mode: 			none;
  animation-direction: 			alternate;
  animation-timing-function:  	ease-in;
}

.doshrink {
  -webkit-animation:   			doshrink  2s 1 ease-in; 
  -moz-animation:      			doshrink  2s 1 ease-in; 
  -o-animation:        			doshrink  2s 1 ease-in;
  animation:            		doshrink 2s 1;
  animation:            		doshrink 2s 1, shake 2s;
  animation-fill-mode: 			none;
  animation-direction: 			alternate;
  animation-timing-function:  	ease-in;
  animation-delay: 				0s, 2s;
}

@keyframes doshrink{
  0%, 20% {
    -webkit-transform:scale(1);
    -moz-transform:scale(1);
    -ms-transform:scale(1);
    -o-transform:scale(1);
    transform:scale(1);
  }
